doctype html
html(
  data-ng-app="travap"
)
  head
    meta(charset="UTF-8")
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    )
    script(type="text/javascript" src="vendor/js/angular.min.js")
    script(type="text/javascript" src="vendor/js/angular-route.min.js")
    script(type="text/javascript" src="vendor/js/angular-resource.min.js")
    script(type="text/javascript" src="vendor/js/angular-touch.min.js")
    script(type="text/javascript" src="vendor/js/angular-deckgrid.js")
    script(type="text/javascript" src="vendor/js/leaflet.js")
    script(type="text/javascript" src="vendor/js/leaflet-angular-icon.min.js")
    script(type="text/javascript" src="vendor/js/screenfull.min.js")
    script(type="text/javascript" src="app.js")

    link(rel="stylesheet" type="text/css" href="vendor/css/leaflet.css")
    link(rel="stylesheet" type="text/css" href="main.css")
    title(
      data-ng-bind="'Travap - ' + pageTitle"
    ) Travap
  body(
    data-ng-view
    data-ng-attr-id="{{ pageTitle == 'Places' ? 'map' : 'gallery' }}"
    data-ng-class="{'fullscreen-active': item.open > -1, 'no-hud': item.hideHUD}"
  )
